{
  "name": "trixly",
  "version": "0.0.9",
  "description": "Universal TypeScript starter kit for Angular 2 and React ",
  "main": "src/index.ts",
   "directories": {
    "src": "src/"
  },
  "files": [
    "CHANGELOG.md",
    "src",
    "dist"
  ],
  "scripts": {
    "clean": "rimraf coverage/ dist/",
    "clean:dist": "rimraf -- dist/",
    "build": "npm run build:dev",
    "prebuild:dev": "npm run clean:dist",
    "build:dev": "cross-env NODE_ENV=development webpack --config webpack.config.js --progress --profile --colors --display-error-details --display-cached",
    "build:prod": "cross-env NODE_ENV=production webpack --config config/webpack/webpack.prod.config.js  --progress --profile --colors --display-error-details --display-cached --bail",
    "test": "npm run test:browser",
    "test:coverage": "cross-env COVERAGE=true karma start --single-run",
    "test:browser": "karma start config/karma.conf.js --no-auto-watch --browsers=Chrome",
    "test:phantom": "karma start config/karma.conf.js --single-run --no-auto-watch --browsers=PhantomJS",
    "test:chrome": "karma start config/karma.conf.js --single-run --no-auto-watch --browsers=Chrome",
    "watch": "npm run watch:chrome",
    "watch:phantom": "karma start config/karma.conf.js --auto-watch --no-single-run --browsers=PhantomJS",
    "watch:chrome": "karma start config/karma.conf.js --auto-watch --no-single-run --browsers=Chrome",
    "debug:chrome": "karma start config/karma.conf.js --auto-watch --single-run=false --debug  --browsers=Chrome",
    "watch:dev": "npm run build:dev -- --w",
    "watch:dev:hmr": "npm run watch:dev -- --hot",
    "watch:prod": "npm run build:prod -- --w",
    "lint": "npm run lint:src && npm run lint:tests",
    "lint:tests": "tslint test/**/*.ts",
    "lint:src": "tslint src/**/*.ts",
    "tsd:update": "tsd reinstall --overwrite",
    "typings-install": "typings install",
    "postinstall": "typings install",
    "postversion": "git push && git push --tags",
    "dependencies:check": "ncu",
    "dependencies:upgrade": "ncu -u"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trixler/trixly.git"
  },
  "author": {
    "name": "KFlash",
    "email": "kflash123@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/trixler/trixly/issues"
  },
  "keywords": [
    "vscode",
    "typescript",
    "boilerplate",
    "project",
    "skeleton",
    "debug",
    "intellisense",
    "angular2",
    "angular",
    "react",
    "reactjs",
    "workflow",
    "microsot",
    "babel",
    "webpack",
    "karma",
    "compile",
    "transpile",
    "mocha"
  ],
  "homepage": "https://github.com/trixler/trixly#readme",
  "dependencies": {
    "babel-core": "^6.9.1",
    "babel-register": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-loader": "^6.2.4",
    "karma": "^0.13.22",
    "karma-cli": "1.0.0",
    "karma-chrome-launcher": "^1.0.1",
    "karma-coverage": "^1.0.0",
    "karma-coveralls": "^1.1.2",
    "karma-mocha-reporter": "^2.0.3",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "1.7.0",
    "karma-mocha": "1.0.1",
    "karma-chai": "0.1.0",
    "karma-sinon": "1.0.5",
    "semver": "^5.1.0",
    "coveralls": "^2.11.9",
    "phantomjs-prebuilt": "^2.1.7",
    "remap-istanbul": "^0.6.4",
    "rimraf": "^2.5.2",
    "codelyzer": "~0.0.22",
    "mocha": "^2.5.3",
    "sinon": "^1.17.4",
    "chai": "^3.5.0",
    "typescript": "^1.9.0-dev.20160608-1.0",
    "typings": "^1.0.4",
    "source-map-loader": "^0.1.5",
    "tslint": "^3.11.0",
    "ts-node": "^0.8.0",
    "typedoc": "^0.4.1",
    "yargs": "^4.7.1",
    "awesome-typescript-loader": "~0.19.1",
    "tslint-loader": "^2.1.4",
    "istanbul-instrumenter-loader": "^0.2.0",
    "compression-webpack-plugin": "^0.3.1",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1",
    "npm-check-updates": "^2.6.7",
    "cross-env": "1.0.8",
    "html-webpack-plugin": "^2.17.0",
    "css-loader": "^0.23.1",
    "json-loader": "^0.5.4",
    "style-loader": "^0.13.1",
     "url-loader": "^0.5.7"
  },
  "engines": {
    "node": ">= 5.4.1 < 7"
  },
  "devDependencies": {
    "buble": "^0.10.6",
    "buble-loader": "^0.2.1"
  }
}
